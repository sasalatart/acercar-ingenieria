<h1>Cambiar contrase単a</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, 'Nueva contrase単a', class: 'control-label' %>
    <%= f.password_field :password, class: 'form-control' %>
    <%= f.errors :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirmar nueva contrase単a', class: 'control-label' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
    <%= f.errors :password_confirmation %>
  </div>

  <div class="center-align">
    <%= f.submit 'Cambiar contrase単a', class: 'button-link button-large' %>
  </div>
<% end %>

