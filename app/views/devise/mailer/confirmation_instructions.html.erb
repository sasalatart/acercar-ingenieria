<% content_for :greeting do %>
  <%= "¡Bienvenido #{@resource.email}!" %>
<% end %>

<% content_for :body_upper do %>
  <%= 'Por favor confirma tu correo electrónico en el siguiente enlace:' %>
<% end %>

<% content_for :call_to_action do %>
  <%= render partial: '/layouts/mailer_call_to_action',
             locals: { href: confirmation_url(@resource, confirmation_token: @token),
                       button_text: 'Confirmar mi cuenta' } %>
<% end %>
