<% content_for :greeting do %>
  <%= "¡Hola #{@resource.email}!" %>
<% end %>

<% content_for :body_upper do %>
  <%= 'Tu cuenta se ha bloqueado porque se han superado el número máximo de intentos para conectarse. Para desbloquear tu cuenta ingresa al siguiente enlace:' %>
<% end %>

<% content_for :call_to_action do %>
  <%= render partial: '/layouts/mailer_call_to_action',
             locals: { href: unlock_url(@resource, unlock_token: @resource.unlock_token, locale: I18n.locale),
                       button_text: 'Desbloquear mi cuenta' } %>
<% end %>
