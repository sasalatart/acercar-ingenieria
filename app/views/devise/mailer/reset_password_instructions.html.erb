<% content_for :greeting do %>
  <%= "¡Hola #{@resource.email}!" %>
<% end %>

<% content_for :body_upper do %>
  <%= 'Alguien ha solicitado un cambio de contraseña, por favor accede al siguiente enlace:' %>
<% end %>

<% content_for :call_to_action do %>
  <%= render partial: '/layouts/mailer_call_to_action',
             locals: { href: edit_password_url(@resource, reset_password_token: @token, locale: I18n.locale),
                       button_text: 'Cambiar mi contraseña' } %>
<% end %>

<% content_for :body_lower do %>
  <%= 'Si no solicitaste esto, por favor ignora este correo. Tu contraseña no cambiará hasta que accedas al enlace de arriba.' %>
<% end %>
