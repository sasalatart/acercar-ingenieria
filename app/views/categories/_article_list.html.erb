<div class="center-align digg-pagination">
  <%= will_paginate @articles %>
</div>

<% @articles.each do |article| %>
  <div class="article">
    <div class="row">
      <div class="col-sm-2">
        <%= link_to [article.major, article] do %>
          <div class="center-align flex-column">
            <%= image_tag(article.image.url(:thumb), class: 'img-responsive') %>
            <p class="text-center"><%= article.title %></p>
          </div>
        <% end -%>
      </div>

      <div class="col-sm-10">
        <p>Publicado el <%= l article.created_at %></p>
        <p><i><%= article.major.name %></i></p>
        <p><%= article.short_description %></p>
      </div>
    </div>
  </div>
<% end -%>

<div class="center-align digg-pagination">
  <%= will_paginate @articles %>
</div>
