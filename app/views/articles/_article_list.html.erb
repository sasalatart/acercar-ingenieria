<div class="center-align digg-pagination">
  <% if @major %>
    <%= will_paginate @articles, params: { :major_id => @major.id } %>
  <% else %>
    <%= will_paginate @articles %>
  <% end %>
</div>

<% @articles.each do |article| %>
  <div class="article">
    <div class="row">
      <div class="col-sm-2">
        <%= link_to [article.major, article] do %>
          <div class="center-align flex-column">
            <%= image_tag(article.image.url(:thumb), class: 'img-responsive') %>
            <p class="text-center"><%= article.title %></p>
          </div>
        <% end -%>
      </div>

      <div class="col-sm-10">
        <p>Publicado el <%= human_created_at(article) %></p>
        <% if article.categories %>
          <p>
            <% article.categories.each do |x| %>
              <%= raw("<i class='fa fa-tags'></i> #{x.name}") %>
            <% end -%>
          </p>
        <% end %>
        <p><%= article.short_description %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="center-align digg-pagination">
  <% if @major %>
    <%= will_paginate @articles, params: { :major_id => @major.id } %>
  <% else %>
    <%= will_paginate @articles %>
  <% end %>
</div>
