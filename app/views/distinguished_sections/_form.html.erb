<%= form_for @distinguished_section, html: { class: 'form-inline center-align' } do |f| %>
  <fieldset>
    <legend><%= title %></legend>

    <div class="form-group">
      <%= f.label :name, 'Nombre:', class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
      <%= f.label :description, 'Descripción:', class: 'control-label' %>
      <%= f.text_area :description, class: 'form-control', required: true %>
      <%= f.submit '¡Listo!', class: 'button-link button-large' %>
    </div>
  </fieldset>
<% end %>
