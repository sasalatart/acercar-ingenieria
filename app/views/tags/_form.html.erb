<%= form_for @tag, html: { class: 'form-inline center-align' } do |f| %>
  <fieldset>
    <legend><%= title %></legend>

    <div class="form-group">
      <%= f.label :name, 'Nombre', class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :category, 'Categoría:', class: 'control-label' %>
      <%= select_tag 'tag[category]',
                     options_for_select(Tag::VALID_CATEGORIES, "Majors"),
                     class: 'form-control' %>
      <%= f.submit '¡Listo!', class: 'button-link button-large' %>
    </div>
  </fieldset>
<% end %>
